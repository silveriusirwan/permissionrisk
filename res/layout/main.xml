        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_root_status"
        android:text="@string/nfc_status"/>
    <TextView
		android:id="@+id/id_bluetooth_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_nfc_status"
        android:text="@string/nfc_status"/>
    <TextView
		android:id="@+id/id_lock_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_bluetooth_status"
        android:text="@string/lock_status"/>
    <TextView
