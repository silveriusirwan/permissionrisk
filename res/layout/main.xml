	<TextView
		android:id="@+id/id_simlock_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_location_status"
        android:text="@string/simlock_status"/>
	<TextView
		android:id="@+id/id_wifi_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_simlock_status"
        android:text="@string/wifi_history"/>
	<TextView
        android:id="@+id/id_hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/id_wifi_history"
        android:text="Test" 
        android:maxLines = "20"
		android:scrollbars = "vertical"/>
